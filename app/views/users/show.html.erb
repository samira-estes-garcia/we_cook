<h1> User show page </h1>

<% if !!flash[:message] %>
  		<h4><%= flash[:message] %></h4>
<% end %>

<%= link_to 'Edit Profile', edit_user_registration_path %>

<%= link_to 'Add a Recipe', new_recipe_path(@recipe) %>


<%= link_to 'View Recipes Created by this user', user_recipes_path(@user) %><br>

<% @user.recipes.each do |recipe| %>
    <%= link_to recipe.title, recipe_path(recipe.id) %><br>
<% end %>