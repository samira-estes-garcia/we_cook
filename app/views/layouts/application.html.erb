<!DOCTYPE html>
<html>
  <head>
    <title>WeCook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag :jquery %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar sticky-top navbar-light" style="background-color: #dc3545;">
    <a href="<% root_url %>" class="text-white">
      <img src="" alt="We Cook Logo" />
    </a>
        <% if !current_user %>
          <a href="<%= new_user_session_path %>" class="text-white">Sign In</a>
          <a href="<%= new_user_registration_path %>" class="text-white">Sign Up</a>
        <% end %>
        <% if current_user %>
          <div class="navbar-brand"><%= link_to current_user.name, user_path(current_user)%></div>
          <div class="navbar-brand"><%= link_to "Log Out", destroy_user_session_path, method: :delete %></div>
        <% end %>
  </nav>
        <% if error = notice %>
          <p class="notice alert alert-success" role="alert"><%= notice %></p>
        <% elsif error = alert %>
          <p class="alert alert-danger" role="alert"><%= alert %></p>
        <% else %>
          <p class=""></p>
        <% end %>
    <%= yield %>
  </body>
</html>
