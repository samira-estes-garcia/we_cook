<div class="form-group">
<h2>Sign In</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label_html: {class: "label"}, 
                input_html: { autocomplete: "email", class: "form-control input" } %>
    <%= f.input :password,
                required: false,
                label_html: {class: "label"}, 
                input_html: { autocomplete: "current-password", class: "form-control input" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign In", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>